<div class="container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">

      <div class="posts">
        <% @posts.each do |post| %>
          <div class="post clearfix">
            <div class="post-details">
              <h1 class="post-title"><%= link_to post.title, post %></h1>
              <h6><%= time_ago_in_words(post.created_at)%></h6>
              <p class="post-body"><%= truncate(post.body, :length => 250) %></p>
            </div>
          </div>
        <% end %>
      </div>

    </div>
  </div>
</div>
